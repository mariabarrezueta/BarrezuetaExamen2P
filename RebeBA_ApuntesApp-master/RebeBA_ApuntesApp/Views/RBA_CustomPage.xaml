<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RebeBA_ApuntesApp.Views.RBA_CustomPage"
             Title="Custom Page">

    <StackLayout Padding="20">
        <Label Text="Welcome to RBA Custom Page"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="StartAndExpand"
               FontFamily="RBAFontFamily" />

        <Entry x:Name="inputEntry" Placeholder="Enter alphanumeric string" />

        <Button Text="Calculate"
                Clicked="OnCalculateClicked"
                BackgroundColor="#00BCD4"
                TextColor="#FFFFFF"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" />

        <Button Text="Clear"
                Clicked="OnClearClicked"
                BackgroundColor="#FF5722"
                TextColor="#FFFFFF"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" />

        <Label x:Name="resultLabel" Text="Results will appear here"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>




