<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RebeBA_ApuntesApp.Views.RebeBA_CustomPage"
             Title="Custom Page">

    <StackLayout>
        <Label Text="Welcome to RBA Custom Page"
               Style="{StaticResource {x:Type Label}}"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="StartAndExpand" />

        <Button Text="RBA Button"
                Style="{StaticResource {x:Type Button}}"
                FontSize="18"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" />

        <Image Source="Resources/Images/rba_image.png"
               Style="{StaticResource {x:Type Image}}"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>


