<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RebeBA_ApuntesApp.Views.RebeBA_CustomPage"
             Title="Custom Page">

    <StackLayout>
        <Label Text="Welcome to RBA Custom Page"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="StartAndExpand"
               FontFamily="RBAFontFamily" />

        <Button Text="RBA Button"
                FontSize="18"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="#00BCD4"
                TextColor="#FFFFFF" />

        <Image Source="Resources/Images/rba_image.png"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>

