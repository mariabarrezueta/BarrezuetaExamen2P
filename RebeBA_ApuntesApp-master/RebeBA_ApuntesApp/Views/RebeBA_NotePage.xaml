<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RebeBA_ApuntesApp.Views.RebeBA_NotePage"
             Title="RebeBA Note Page">

    <StackLayout Padding="20">
        <Label Text="Ingrese una cadena de caracteres:" />

        <Editor x:Name="noteEditor" Placeholder="Enter your note here" />

        <Label x:Name="lettersLabel" Text="Letras: 0" />
        <Label x:Name="numbersLabel" Text="Números: 0" />
        <Label x:Name="uppercaseLabel" Text="Mayúsculas: 0" />
        <Label x:Name="lowercaseLabel" Text="Minúsculas: 0" />
        <Label x:Name="vowelsLabel" Text="Vocales: 0" />
        <Label x:Name="totalLabel" Text="Total: 0" />

        <Button Text="Calcular"
                Clicked="OnCalculateClicked"
                BackgroundColor="#6200EE"
                TextColor="White" />

        <Button Text="Guardar"
                Clicked="OnSaveClicked"
                BackgroundColor="#03DAC5"
                TextColor="White" />

        <Button Text="Limpiar"
                Clicked="OnClearClicked"
                BackgroundColor="#03DAC5"
                TextColor="White" />

        <Button Text="Eliminar"
                Clicked="OnDeleteClicked"
                BackgroundColor="#B00020"
                TextColor="White" />
    </StackLayout>
</ContentPage>
