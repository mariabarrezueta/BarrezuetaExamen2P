<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RebeBA_ApuntesApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RebeBA_ApuntesApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="RebeBA_ApuntesApp">

    <FlyoutItem Title="Notes" Icon="Resources/Images/icon_notes.png">
        <ShellContent ContentTemplate="{DataTemplate views:RebeBA_AllNotesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="About" Icon="Resources/Images/icon_about.png">
        <ShellContent ContentTemplate="{DataTemplate views:RebeBA_AboutPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Custom" Icon="Resources/Images/icon_custom.png">
        <ShellContent ContentTemplate="{DataTemplate views:RBA_CustomPage}" />
    </FlyoutItem>

</Shell>



